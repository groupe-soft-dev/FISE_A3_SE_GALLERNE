<Window x:Class="EasySaveV3.AppClient.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveV3.AppClient" xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Settings" Height="750" Width="600" Background="#EAEAEA">

    
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ComboBox ItemsSource="{Binding AvailableLanguages}"
                  SelectedItem="{Binding CurrentLanguage, Mode=TwoWay}"
                  Width="50"
                  Height="20"
                  Foreground="#1C1C1C"
                  Background="White"
                  BorderBrush="#D9D9D9"
                  Grid.Row="0"
                  HorizontalAlignment="Right"
                  Margin="0,0,10,0"
        
        />


        <!-- Max file multithread -->
        <TextBlock Text="{Binding [max_file_size]}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Grid.Row="0"
                   Grid.Column="0"
                   Margin="25,20,20,0"
        />
        <TextBlock Text="{Binding [max_file_size_detail], UpdateSourceTrigger=PropertyChanged}"
                FontSize="14"
                TextWrapping="Wrap"
                Grid.Row="1"
                Margin="20,2,20,2"
        />

        <Border CornerRadius="6"
                BorderThickness="1"
                BorderBrush="Gray"
                Background="White"
                Margin="20,5"
                Padding="0"
                Grid.Row="2">
            <wpfx:IntegerUpDown Value="{Binding EditedMaxFileSize, UpdateSourceTrigger=PropertyChanged}"
                                BorderBrush="White"
                                FontSize="14"
                                Margin="7,0,7,0"
                                IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}"
            />
        </Border>


        <!-- Priority Files selection -->
        <TextBlock Text="{Binding [priority_files]}"
           FontSize="18"
           FontWeight="SemiBold"
           Grid.Row="3"
           Grid.Column="0"
           Margin="25,20,20,0"
        />
        <TextBlock Text="{Binding [priority_files_detail], UpdateSourceTrigger=PropertyChanged}"
           FontSize="14"
           TextWrapping="Wrap"
           Grid.Row="4"
           Margin="20,2,20,2"
        />
        
        <Border CornerRadius="6" BorderThickness="1" BorderBrush="Gray" Background="White" Margin="20,5" Padding="0" Grid.Row="5">
            <TextBox Text="{Binding EditedPriorityFiles}"
             BorderBrush="White"
             FontSize="14"
             Margin="7,0,7,0"
             Grid.Row="5"
             Grid.Column="0"
             IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}"
            />
        </Border>
        
        <!-- Encryption Key -->
        <TextBlock Text="{Binding [encryption_key]}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Grid.Row="6"
                   Grid.Column="0"
                   Margin="25,20,20,0"
        />
        <Border CornerRadius="6" BorderThickness="1" BorderBrush="Gray" Background="White" Margin="20,5" Padding="0" Grid.Row="7">
            <TextBox Text="{Binding EditedKey}"
                     BorderBrush="White"
                     FontSize="14"
                     Margin="7,0,7,0"
                     Grid.Row="7"
                     Grid.Column="0"
                     IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}"
            />
        </Border>

        <!-- Encryption extension -->
        <TextBlock Text="{Binding [encryption_extensions], UpdateSourceTrigger=PropertyChanged}"
           FontSize="16"
           FontWeight="SemiBold"
           Grid.Row="8"
           Grid.Column="0"
           Margin="25,20,20,0"
        />
        <TextBlock Text="{Binding [encryption_extensions_detail], UpdateSourceTrigger=PropertyChanged}"
           FontSize="14"
           TextWrapping="Wrap"
           Grid.Row="9"
           Margin="20,2,20,2"
        />
        <Border CornerRadius="6" BorderThickness="1" BorderBrush="Gray" Background="White" Margin="20,5" Padding="0" Grid.Row="10">
            <TextBox Text="{Binding EditedExtensions, UpdateSourceTrigger=PropertyChanged}"
             BorderBrush="White"
             FontSize="14"
             Margin="7,0,7,0"
             Grid.Row="10"
             Grid.Column="0"
             IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}"            
        />
        </Border>

        
        <!-- Software Packages -->
        <TextBlock Text="{Binding [software_packages], UpdateSourceTrigger=PropertyChanged}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Grid.Row="11"
                   Grid.Column="0"
                   Margin="25,20,20,0"
        />
        <TextBlock Text="{Binding [software_packages_detail], UpdateSourceTrigger=PropertyChanged}"
                   FontSize="14"
                   TextWrapping="Wrap"
                   Grid.Row="12"
                   Margin="20,2,20,2"
        />
        <Border CornerRadius="6" BorderThickness="1" BorderBrush="Gray" Background="White" Margin="20,5" Padding="0" Grid.Row="13">
            <TextBox Text="{Binding EditedSoftwarePackages, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="White"
                     FontSize="14"
                     Margin="7,0,7,0"
                     Grid.Row="13"
                     Grid.Column="0"
                     IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}"            
            />

        </Border>


        <!-- Buttons -->
        <Button Content="{Binding [modify]}" 
                Command="{Binding EditCommand}"
                Foreground="#707070"
                FontWeight="DemiBold"
                FontSize="16"
                Width="140"
                Height="30"
                Background="White"
                BorderBrush="#707070"
                BorderThickness="1.5"
                Grid.Row="14"
                Margin="0,10,160,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Visibility="{Binding IsEditing, Converter={StaticResource InvBoolToVis}}"
        />

        <Button Content="{Binding [cancel]}" 
                Command="{Binding CancelCommand}"
                Foreground="#E55252"
                FontWeight="DemiBold"
                FontSize="16"
                Width="140"
                Height="30"
                Background="White"
                BorderBrush="#E55252"
                BorderThickness="1.5"
                Grid.Row="14"
                Margin="0,10,310,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"        
                />

        <Button Content="{Binding [validate]}" 
                Command="{Binding ChangeSettingsCommand}"
                Foreground="#0D99FF"
                FontWeight="DemiBold"
                FontSize="16"
                Width="140"
                Height="30"
                Background="White"
                BorderBrush="#0D99FF"
                BorderThickness="1.5"
                Grid.Row="14"
                Margin="0,10,160,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"        
        />

        <Button Content="{Binding [exit]}"
                Command="{Binding ExitCommand}"
                Foreground="White"
                FontWeight="DemiBold"
                FontSize="16"
                Width="140"
                Height="30"
                Background="#0D99FF"
                BorderBrush="#64BDFF"
                BorderThickness="1.5"
                Grid.Row="14"
                Margin="0,10,10,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
        />


    </Grid>
</Window>