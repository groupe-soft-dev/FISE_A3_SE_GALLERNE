<Window x:Class="EasySaveV2.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveV2"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="181*"/>
        </Grid.ColumnDefinitions>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,141,10,85" Grid.ColumnSpan="2"/>
        <Label Content="EasySave V2" HorizontalAlignment="Left" Margin="46,35,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Grid.ColumnSpan="2"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Margin="564,399,0,0" VerticalAlignment="Top" Height="25" Width="150" FontSize="10"/>
        <ComboBox Grid.Column="1"
          HorizontalAlignment="Left"
          Margin="639,50,0,0"
          VerticalAlignment="Top"
          Width="67"
          ItemsSource="{Binding AvailableLanguages}"
          SelectedItem="{Binding SelectCurrentLanguage, Mode=TwoWay}" Height="19"
          />
        <Label Content="{Binding [welcome_message]}" HorizontalAlignment="Left" Margin="38,97,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="30" Width="362"/>
        <Button Grid.Column="1" Content="{Binding [execute_backup]}" HorizontalAlignment="Left" Margin="391,86,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
