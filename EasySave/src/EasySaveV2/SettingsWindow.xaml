<Window x:Class="EasySaveV2.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveV2"
        mc:Ignorable="d"
        Title="Settings" Height="470" Width="470" Background="#EAEAEA">

    
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ComboBox ItemsSource="{Binding AvailableLanguages}"
                  SelectedItem="{Binding CurrentLanguage, Mode=TwoWay}"
                  Width="50"
                  Height="20"
                  Foreground="#1C1C1C"
                  Background="White"
                  BorderBrush="#D9D9D9"
                  Grid.Row="0"
                  HorizontalAlignment="Right"
                  Margin="0,0,10,0"
        
        />

        <TextBlock Text="Encryption key"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Grid.Row="0"
                   Grid.Column="0"
                   Margin="25,20,20,0"
        />
        <Border CornerRadius="6" BorderThickness="1" BorderBrush="Gray" Background="White" Margin="20,5" Padding="0" Grid.Row="1">
            <TextBox Text="{Binding EditedKey}"
                     BorderBrush="White"
                     FontSize="14"
                     Margin="7,0,7,0"
                     Grid.Row="1"
                     Grid.Column="0"
                     IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}"
            />

        </Border>

        <!--TextBlock="{Binding [software_packages], UpdateSourceTrigger=PropertyChanged}"-->
        <TextBlock Text="Software packages"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Grid.Row="2"
                   Grid.Column="0"
                   Margin="25,10,20,0"
        />
        <!-- Text="{Binding [software_packages_detail], UpdateSourceTrigger=PropertyChanged}"-->
        <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                   FontSize="10"
                   TextWrapping="Wrap"
                   Grid.Row="3"
                   Margin="20,2,20,2"
        />
        <Border CornerRadius="6" BorderThickness="1" BorderBrush="Gray" Background="White" Margin="20,5" Padding="0" Grid.Row="4">
            <TextBox Text="{Binding EditedExtensions, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="White"
                     FontSize="14"
                     Margin="7,0,7,0"
                     Grid.Row="4"
                     Grid.Column="0"
                     IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}"            
            />

        </Border>



        <!--Text="{Binding [encryption_extensions], UpdateSourceTrigger=PropertyChanged}"-->
        <TextBlock Text="Encryption extensions"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Grid.Row="5"
                   Grid.Column="0"
                   Margin="25,10,20,0"
        />
        <!-- {Binding [encryption_extensions_detail], UpdateSourceTrigger=PropertyChanged}-->
        <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                   FontSize="10"
                   TextWrapping="Wrap"
                   Grid.Row="6"
                   Margin="20,2,20,2"
        />
        <Border CornerRadius="6" BorderThickness="1" BorderBrush="Gray" Background="White" Margin="20,5" Padding="0" Grid.Row="7">
            <TextBox Text="{Binding EditedSoftwarePackages, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="White"
                     FontSize="14"
                     Margin="7,0,7,0"
                     Grid.Row="7"
                     Grid.Column="0"
                     IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}"            
            />

        </Border>

        <Button Content="Edit" 
                Command="{Binding EditCommand}"
                Foreground="#707070"
                FontWeight="DemiBold"
                Width="110"
                Height="25"
                Background="White"
                BorderBrush="#707070"
                BorderThickness="1.5"
                Grid.Row="8"
                Margin="0,10,130,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Visibility="{Binding IsEditing, Converter={StaticResource InvBoolToVis}}"
        />

        <Button Content="Discard" 
                Command="{Binding CancelCommand}"
                Foreground="#E55252"
                FontWeight="DemiBold"
                Width="110"
                Height="25"
                Background="White"
                BorderBrush="#E55252"
                BorderThickness="1.5"
                Grid.Row="8"
                Margin="0,10,250,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"        />

        <Button Content="Confirm" 
                Command="{Binding ChangeSettingsCommand}"
                Foreground="#0D99FF"
                FontWeight="DemiBold"
                Width="110"
                Height="25"
                Background="White"
                BorderBrush="#0D99FF"
                BorderThickness="1.5"
                Grid.Row="8"
                Margin="0,10,130,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"        
        />

        <Button Content="Save &amp; Exit"
                Command="{Binding ExitCommand}"
                Foreground="White"
                FontWeight="DemiBold"
                Width="110"
                Height="25"
                Background="#0D99FF"
                BorderBrush="#64BDFF"
                BorderThickness="1.5"
                Grid.Row="8"
                Margin="0,10,10,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
        />


    </Grid>
</Window>