<Window x:Class="EasySaveV2.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveV2"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Ligne pour le bouton EXIT -->
            <RowDefinition Height="Auto"/>
            <!-- Ligne pour la clé d'encryptage -->
            <RowDefinition Height="*"/>
            <!-- Ligne pour les colonnes -->
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- 1 part -->
            <ColumnDefinition Width="*" />
            <!-- 2 parts -->
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Grid.Row="0" Grid.ColumnSpan="2">
            <Button Content="EXIT" Command="{Binding CloseCommand}" />
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10" Grid.Row="1" Grid.ColumnSpan="2">
            <Label Content="{Binding [encryption_key]}" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="5,0,0,0" TextWrapping="Wrap" Text="TextBox"  Width="120"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="2" Margin="10">
            <TextBlock Text="{Binding [encryption_extensions], UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="{Binding [encryption_extensions_detail], UpdateSourceTrigger=PropertyChanged}"/>

            <TextBox Text="{Binding EditedExtensions, UpdateSourceTrigger=PropertyChanged}"
             />
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button Content="Modifier" Margin="5" Command="{Binding EditCommand}" />
                <Button Content="Annuler" Margin="5" Command="{Binding EditCommand}" />
                <Button Content="Valider" Margin="5" Command="{Binding ChangeEncryptionExtensionsCommand}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="2" Margin="10">
            <TextBlock Text="{Binding [encryption_extensions], UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="{Binding [encryption_extensions_detail], UpdateSourceTrigger=PropertyChanged}"/>

            <TextBox Text="{Binding EditedExtensions, UpdateSourceTrigger=PropertyChanged}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Modifier" Margin="5" Command="{Binding EditCommand}" />
                <Button Content="Annuler" Margin="5" Command="{Binding EditCommand}"  />
                <Button Content="Valider" Margin="5" Command="{Binding ChangeSoftwarePackagesCommand}" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
