<Window x:Class="EasySaveV2.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveV2"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">

    <Grid>

        <Grid.RowDefinitions>
            <!-- Line for the EXIT button -->
            <RowDefinition Height="Auto"/>
            <!-- Line for the encryption key and the language selection -->
            <RowDefinition Height="Auto"/>
            <!-- Line for the extensions & software settings -->
            <RowDefinition Height="Auto"/>
            <!-- Line for the settings buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Exit button line -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Grid.Row="0" Grid.ColumnSpan="2">
            <Button Content="{Binding [exit]}" Command="{Binding CloseCommand}" />
        </StackPanel>
        
        <!-- for the encryption key -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" Grid.ColumnSpan="2">
            <Label Content="{Binding [encryption_key]}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" Text="{Binding EditedKey}" IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}" VerticalAlignment="Top" Width="120"/>
        </StackPanel>
        
        <!-- for the language selection -->
        <ComboBox Grid.Row="1" 
            Grid.Column="1"
            Margin="0,10,20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Width="67"
            ItemsSource="{Binding AvailableLanguages}"
            SelectedItem="{Binding CurrentLanguage, Mode=TwoWay}" Height="19"
        />

        <!-- for the encryption extensions -->
        <StackPanel Grid.Column="0" Grid.Row="2" Margin="20">
            <TextBlock Text="{Binding [encryption_extensions], UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" FontSize="14"  Margin="0,10,0,0"/>
            <TextBlock Text="{Binding [encryption_extensions_detail], UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Margin="0,5,0,0" VerticalAlignment="Top"/>

            <TextBox Text="{Binding EditedExtensions, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- for the software packages -->
        <StackPanel Grid.Column="1" Grid.Row="2" Margin="20">
            <TextBlock Text="{Binding [software_packages], UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding [software_packages_detail], UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Margin="0,5,0,0" VerticalAlignment="Top"/>

            <TextBox Text="{Binding EditedSoftwarePackages, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsEditing, Converter={StaticResource InvBool}}" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- for the settings buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10,0,70" HorizontalAlignment="Center" Grid.ColumnSpan="2">
            <Button Content="{Binding [modify]}" Margin="5" Command="{Binding EditCommand}" Visibility="{Binding IsEditing, Converter={StaticResource InvBoolToVis}}"/>
            <Button Content="{Binding [cancel]}" Margin="5" Command="{Binding CancelCommand}" Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"/>
            <Button Content="{Binding [validate]}" Margin="5" Command="{Binding ChangeSettingsCommand}" Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>
    </Grid>
</Window>
