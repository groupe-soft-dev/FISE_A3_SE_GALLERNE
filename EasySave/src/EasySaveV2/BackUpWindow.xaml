<Window x:Class="EasySaveV2.BackUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveV2"
        mc:Ignorable="d"
        Title="BackUpWindow" Height="450" Width="800">


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Ligne pour le bouton EXIT -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="30,30,0,0" Grid.Row="0" Grid.Column="0">
            <TextBlock Text="{Binding jobIdName}" FontSize="18"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="center" Margin="0,10,0,0" Grid.Row="1" Grid.Column="0">
            <Label Content="Name" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" Text="{Binding EditedKey}" VerticalAlignment="Top" Width="120"/>
            <Label Content="Source path" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Margin="5,15,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding SourcePath}" Width="200" Margin="0,0,5,0"/>
                <Button Content="..." Command="{Binding BrowseSourceCommand}" Width="30"/>
            </StackPanel>
            <Label Content="Target path" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Margin="5,15,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding TargetPath}" Width="200" Margin="0,0,5,0"/>
                <Button Content="..." Command="{Binding BrowseTargetCommand}" Width="30"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="center" Margin="0,10,0,0" Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Label Content="Encryption" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                <CheckBox HorizontalAlignment="Left" Margin="10,7,0,0" IsChecked="{Binding IsEncryption}" VerticalAlignment="Top" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Label Content="Diferencial" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                <CheckBox HorizontalAlignment="Left" Margin="10,7,0,0" IsChecked="{Binding IsEncryption}" VerticalAlignment="Top" Width="120"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="center" Margin="0,10,0,40" Grid.Row="2" Grid.ColumnSpan="2">
            <Button Content="{Binding [cancel]}" Command="{Binding CancelCommand}" />
            <Button Content="{Binding [validate]}" Command="{Binding validateCommand}" />
        </StackPanel>

    </Grid>
</Window>
